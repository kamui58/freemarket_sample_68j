      = image_tag 'items/a004.png', class: 'GoodDetealContents__main--images__subImage'
      = image_tag 'items/a005.png', class: 'GoodDetealContents__main--images__subImage'
      = image_tag 'items/a006.png', class: 'GoodDetealContents__main--images__subImage'


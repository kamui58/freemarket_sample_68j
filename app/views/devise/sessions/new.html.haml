.Wrapper
  .Logo
    = image_tag "logo.png", class: :"Logo__png"

  .Session
    .Session__sign
      %p
        アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", new_user_registration_path, class: :"Session__sign--btn"
      
    .Session__input
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :"メールアドレス", class: :"Session__input--mail"

        .field
          = f.password_field :password, autocomplete: "current-password", placeholder: :"パスワード", class: :"Session__input--pass"

        -# \% if devise_mapping.rememberable? %&gt;
        -# .field
        -#   = f.check_box :remember_me
        -#   = f.label :remember_me
        
        .actions
          = f.submit "ログイン", class: :"Session__input--btn"

        -# = render "devise/shared/links"
        
        = link_to "パスワードをお忘れの方", new_user_password_path, class: :"Session__input--forget"
        
  .Footer 
    .Footer__logo
      = link_to "#" do
        = image_tag "logo-white.png", class: :"Footer__logo--text"
    .Footer--text
      FURIMA, ink.

